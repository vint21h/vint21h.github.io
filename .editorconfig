root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.jinja]
indent_style = space
